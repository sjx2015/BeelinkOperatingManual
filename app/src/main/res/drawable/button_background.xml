<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:color="@color/hotpink"
        android:state_pressed="true">
        <shape>
            <gradient android:startColor="@color/hotpink" android:endColor="@color/hotpink"></gradient>
            <stroke android:width="1dip" android:color="@color/hotpink" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <gradient android:startColor="@color/item_focused" android:endColor="@color/item_focused"></gradient>
            <stroke android:width="1dip" android:color="@color/item_focused" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/white" android:endColor="@color/white"></gradient>
            <stroke android:width="3dp" android:color="@color/white" />
            <corners android:radius="4dip" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="@color/youlingbai" android:endColor="@color/youlingbai"></gradient>
            <stroke android:width="3dp" android:color="@color/youlingbai" />
            <corners android:radius="4dip" />
        </shape>
    </item>
</selector>