<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/fragment_content_padding">

    <include layout="@layout/content_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:gravity="center_horizontal"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/fragment_content_padding">

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_card_margin"
                app:cardCornerRadius="@dimen/fragment_card_radius"
                app:cardElevation="@dimen/fragment_card_elevation">

                <LinearLayout
                    android:id="@+id/ll_dpi"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginStart="40px"
                    android:layout_marginTop="40px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/resolution_title"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:text="@string/resolution_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="300px"
                            android:layout_height="295px"
                            android:layout_marginStart="40px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_resolution1" />

                        <ImageView
                            android:layout_width="300px"
                            android:layout_height="295px"
                            android:layout_marginStart="30px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_resolution2" />

                        <ImageView
                            android:layout_width="300px"
                            android:layout_height="295px"
                            android:layout_marginStart="30px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_resolution3" />

                        <ImageView
                            android:layout_width="300px"
                            android:layout_height="295px"
                            android:layout_marginStart="30px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_resolution4" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_card_margin"
                app:cardCornerRadius="@dimen/fragment_card_radius"
                app:cardElevation="@dimen/fragment_card_elevation">

                <LinearLayout
                    android:id="@+id/ll_theme"
                    android:layout_width="match_parent"
                    android:layout_height="460px"
                    android:layout_marginStart="40px"
                    android:layout_marginTop="40px"
                    android:layout_marginEnd="40px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:text="@string/wallpaper_title"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@android:color/primary_text_light"
                        android:text="@string/wallpaper_content"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:layout_marginEnd="40px"
                        android:layout_marginBottom="40px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="335px"
                            android:layout_height="295px"
                            android:layout_marginStart="40px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/personalization_wallpaper1" />

                        <ImageView
                            android:layout_width="335px"
                            android:layout_height="295px"
                            android:layout_marginStart="40px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/personalization_wallpaper2" />

                        <ImageView
                            android:layout_width="335px"
                            android:layout_height="295px"
                            android:layout_marginStart="40px"
                            android:layout_marginRight="40px"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/personalization_wallpaper3" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_card_margin"
                app:cardCornerRadius="@dimen/fragment_card_radius"
                app:cardElevation="@dimen/fragment_card_elevation">

                <LinearLayout
                    android:id="@+id/ll_widget"
                    android:layout_width="match_parent"
                    android:layout_height="450px"
                    android:layout_marginStart="40px"
                    android:layout_marginTop="40px"
                    android:layout_marginEnd="40px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:text="@string/favorate_title"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:layout_marginTop="10px"
                        android:text="@string/favorate_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="14sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:layout_marginTop="40px"
                        android:layout_marginEnd="40px"
                        android:scaleType="fitXY"
                        android:src="@mipmap/personalization_favorite" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_card_margin"
                app:cardCornerRadius="@dimen/fragment_card_radius"
                app:cardElevation="@dimen/fragment_card_elevation">

                <LinearLayout
                    android:id="@+id/ll_hibernate"
                    android:layout_width="match_parent"
                    android:layout_height="360dp"
                    android:layout_marginStart="40px"
                    android:layout_marginTop="40px"
                    android:layout_marginEnd="40px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:text="@string/sleep_title"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:layout_marginTop="10px"
                        android:text="@string/sleep_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="300px"
                            android:layout_height="295px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_sleep1" />

                        <ImageView
                            android:layout_width="300px"
                            android:layout_height="295px"
                            android:layout_marginStart="20px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_sleep2" />

                        <ImageView
                            android:layout_width="300px"
                            android:layout_height="295px"
                            android:layout_marginStart="120px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_sleep3" />

                        <ImageView
                            android:layout_width="300px"
                            android:layout_height="295px"
                            android:layout_marginStart="20px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_sleep4" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_card_margin"
                app:cardCornerRadius="@dimen/fragment_card_radius"
                app:cardElevation="@dimen/fragment_card_elevation">

                <LinearLayout
                    android:id="@+id/ll_font"
                    android:layout_width="match_parent"
                    android:layout_height="450px"
                    android:layout_marginStart="40px"
                    android:layout_marginTop="40px"
                    android:layout_marginEnd="40px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:text="@string/font_title"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:layout_marginTop="10px"
                        android:text="@string/font_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="335px"
                            android:layout_height="295px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_font1" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="295px"
                            android:layout_marginStart="40px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_font2" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_card_margin"
                app:cardCornerRadius="@dimen/fragment_card_radius"
                app:cardElevation="@dimen/fragment_card_elevation">

                <LinearLayout
                    android:id="@+id/ll_language"
                    android:layout_width="match_parent"
                    android:layout_height="500px"
                    android:layout_marginStart="40px"
                    android:layout_marginTop="40px"
                    android:layout_marginEnd="40px"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:text="@string/language_title"
                        android:textColor="@android:color/holo_green_dark"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40px"
                        android:layout_marginTop="10px"
                        android:text="@string/language_content"
                        android:textColor="@android:color/primary_text_light"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40px"
                        android:layout_marginEnd="40px"
                        android:layout_marginBottom="40px"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="335px"
                            android:layout_height="295px"
                            android:layout_marginStart="40px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_language1" />

                        <ImageView
                            android:layout_width="335px"
                            android:layout_height="295px"
                            android:layout_marginStart="40px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_language2" />

                        <ImageView
                            android:layout_width="335px"
                            android:layout_height="295px"
                            android:layout_marginStart="40px"
                            android:layout_marginEnd="40px"
                            android:scaleType="fitXY"
                            android:src="@mipmap/personalization_language3" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </ScrollView>

<com.droidlogic.beelinkoperatingmanual.bottomView.MainUpView
android:id="@+id/mainUpView1"
android:layout_width="wrap_content"
android:layout_height="wrap_content" />

    </LinearLayout>